<Window x:Class="PuzzelGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PuzzelGame" Height="400" Width="600">
    <Grid>
        <Grid.Background>
            <SolidColorBrush Color="#FFF8F5" />
        </Grid.Background>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="PuzzelGame!" FontSize="24" Foreground="#FFBC37" FontFamily="Bree Serif" FontWeight="Normal" Height="158" Width="128" RenderTransformOrigin="0.5,0.5" >
                <TextBlock.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="0.287"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </TextBlock.RenderTransform>
            </TextBlock>
            <Button Content="Start Spel" Width="150" Height="74" Background="#FF9966" Foreground="#FFBC37" FontFamily="Bree Serif" FontWeight="Normal" FontSize="16" Click="StartGame_Click" />
            <Button Content="Afsluiten" Width="150" Height="50" Background="#FF9966" Foreground="#FFBC37" FontFamily="Bree Serif" FontWeight="Normal" FontSize="16" Click="Exit_Click" />
        </StackPanel>
    </Grid>
</Window>